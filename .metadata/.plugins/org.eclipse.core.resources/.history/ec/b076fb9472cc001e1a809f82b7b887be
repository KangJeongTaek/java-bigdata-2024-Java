package Org.KangJeongTaek.Thread;

class MyClass {
	private int count;

	public void increase() {
		count++;
	}

	public void decrease() {
		count--;
	}

	public void getCount() {
		System.out.println(count);
	}

	static public class ThreadFive implements Runnable {
		MyClass my = new MyClass();

		@Override
		public void run() {
			my.decrease();
		}
	}

	static public class ThreadFour implements Runnable {
		MyClass my = new MyClass();

		@Override
		public void run() {
			my.increase();
		}
	}

	public static void main(String[] args) throws Exception {
		Runnable task = new MyClass.ThreadFour();
		Runnable task1 = new MyClass.ThreadFive();
		Thread thread1 = new Thread(task);
		Thread thread2 = new Thread(task1);
		
		thread1.start();
	}
}
